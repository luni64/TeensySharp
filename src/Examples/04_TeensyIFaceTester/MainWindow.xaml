        <TreeView Grid.Column="1" ItemsSource="{Binding roots}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding children}">
                    <StackPanel>
                        <TextBlock Text="{Binding Description}" />
